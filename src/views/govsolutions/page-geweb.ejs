            if (selectEstado && selectEstado.value) {
                mostrarConce(selectEstado.value);
            } else {
                mostrarConce('para');
            }

            // --- DADOS DOS RECURSOS ---
            const featureData = {
                'gestao-escolas': { title: 'Gestão de Escolas', imgSrc: '/images/gestao_escolas.webp', description: 'Permite gerenciar por ano letivo as informações de infraestrutura, dependência administrativa e físicas, equipamentos, modalidades de ensino, turnos, autorização de ensino, entre outras.' },
                'espacos-pedagogicos': { title: 'Espaços Pedagógicos', imgSrc: '/images/espacos_pedagogicos.webp', description: 'Devidamente autorizado pela secretaria de educação, permite a criação de espaços pedagógicos na escola para o controle da lotação de docentes readaptados ou não nesses espaços.' },
                'documentos-escolares': { title: 'Documentos Escolares', imgSrc: '/images/documentos_escolares.webp', description: 'Permite a criação e gerenciamento de todos os documentos escolares, como históricos, declarações e certificados, de forma digital e segura.' },
                'censo-escolar': { title: 'Gestão de Censo Escolar', imgSrc: '/images/gestao_censo.webp', description: 'Nossa ferramenta simplifica o processo de submetimento das informações de todos alunos, orientando você durante a correção de dados conforme o layout exigido pelo MEC/INEP.' },
                'gestao-alunos': { title: 'Gestão de Alunos', imgSrc: '/images/gestao_alunos.webp', description: 'Permite gerenciar os dados pessoais, endereço, pais e responsáveis, além de gerenciar toda a vida escolar dos alunos com emissão dos documentos escolares, declarações, ressalvas entre outros.' },
                'calendarios-escolares': { title: 'Calendários Escolares', imgSrc: '/images/gestao_calendario.webp', description: 'Permite gerenciar por ano letivo os vários calendários escolares de uma rede de ensino, com previsão de dias letivos, feriados, projetos e feiras.' },
                'gestao-matriculas': { title: 'Gestão de Matrículas', imgSrc: '/images/gestao_matriculas.webp', description: 'Permite gerenciar todo o processo de rematrícula e matrículas novas, funcionando como uma central de matrículas para monitorar todas as vagas.' },
                'quadro-funcional': { title: 'Quadro Funcional', imgSrc: '/images/quadro_funcional.webp', description: 'Permite gerenciar por ano letivo as informações de cargos, funções, situação funcional, carga horária, hora-atividade, cedência, dos docentes e dos não docentes.' },
                'frequencia-funcional': { title: 'Frequência Funcional', imgSrc: '/images/Frequencia_funcionario.webp', description: 'Permite gerenciar por ano letivo e competência as informações de cargo, carga-horária, hora-atividade e situação funcional, dos docentes e não docentes.' },
                'gestao-horarios': { title: 'Gestão de Horários', imgSrc: '/images/horario_de_aula.webp', description: 'Faz o controle dos horários de aulas e docentes, evitando conflitos. Disponibiliza todos os horários nos aplicativos do aluno/responsável e do servidor.' },
                'historicos-escolares': { title: 'Históricos Escolares', imgSrc: '/images/historico_escolar.webp', description: 'Primeira plataforma a disponibilizar a emissão de Histórico Escolar com assinatura eletrônica, possibilitando maior agilidade, mobilidade e comodidade.' },
            };

            // --- LÓGICA DO EXPLORADOR DE RECURSOS (DESKTOP) ---
            const featureListContainer = document.getElementById('feature-list');
            if (featureListContainer) {
                const featureImage = document.getElementById('featureImage');
                const featureTitle = document.getElementById('featureTitle');
                const featureDisplay = document.getElementById('feature-display');

                // Gerar itens do menu de recursos
                Object.keys(featureData).forEach((key, index) => {
                    const feature = featureData[key];
                    const isActive = index === 0 ? 'active' : '';
                    const itemHTML = `
                    <div class="feature-item ${isActive}" data-feature="${key}">
                        <div class="feature-header bg-gray-100 rounded-full flex justify-between items-center p-3 cursor-pointer">
                            <span class="font-semibold ml-2">${feature.title}</span>
                            <div class="w-6 h-6 flex items-center justify-center">
                                <svg class="plus-icon w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
                                <svg class="minus-icon w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path></svg>
                            </div>
                        </div>
                        <div class="feature-content">
                            <p class="text-[var(--primary-text)] p-4">${feature.description}</p>
                        </div>
                    </div>
                `;
                    featureListContainer.innerHTML += itemHTML;
                });

                // Função robusta para trocar imagem e título
                function changeFeatureDisplay(newSrc, newTitle) {
                    if (!featureDisplay || !featureImage || !featureTitle) return;

                    // Fallbacks
                    const placeholder = 'https://placehold.co/500x500?text=Imagem+Indisponível';
                    const srcToUse = newSrc || placeholder;
                    const titleToUse = newTitle || '';

                    // Fade out
                    featureDisplay.style.transition = 'opacity 0.25s ease';
                    featureDisplay.style.opacity = '0';

                    // Alterar src e title com um pequeno delay para efeito
                    setTimeout(() => {
                        // Definir handler onerror antes de trocar src
                        featureImage.onerror = () => { featureImage.src = placeholder; };
                        try {
                            featureImage.src = srcToUse;
                        } catch (e) {
                            featureImage.src = placeholder;
                        }
                        featureImage.alt = titleToUse || 'Imagem do recurso';
                        featureTitle.textContent = titleToUse;
                        // Fade in
                        featureDisplay.style.opacity = '1';
                    }, 120);
                }

                // Usar event delegation para lidar com cliques no header
                featureListContainer.addEventListener('click', (ev) => {
                    const header = ev.target.closest('.feature-header');
                    if (!header) return;

                    const item = header.closest('.feature-item');
                    if (!item) return;

                    const wasActive = item.classList.contains('active');
                    // remover active de todos
                    featureListContainer.querySelectorAll('.feature-item').forEach(i => i.classList.remove('active'));

                    if (!wasActive) {
                        item.classList.add('active');
                        const featureName = item.dataset.feature;
                        const data = featureData[featureName];
                        if (data) {
                            changeFeatureDisplay(data.imgSrc, data.title);
                        }
                    }
                });

                // Inicializar com o primeiro item disponível
                const firstFeatureKey = Object.keys(featureData)[0];
                const firstFeatureData = featureData[firstFeatureKey];
                if (firstFeatureData) {
                    // Pequeno timeout para garantir renderização
                    setTimeout(() => {
                        changeFeatureDisplay(firstFeatureData.imgSrc, firstFeatureData.title);
                    }, 100);
                }
            }

            // --- LÓGICA DO SLIDER DE RECURSOS (MOBILE) COM DRAG ---
            const mobileSliderWrapper = document.getElementById('mobile-slider-wrapper');
            if (mobileSliderWrapper) {
                const mobileSliderContainer = document.getElementById('mobile-feature-slider');
                const mobileSliderDotsContainer = document.getElementById('mobile-slider-dots');
                const features = Object.keys(featureData);
                let mobileSlider = null;

                // Criar slides
                features.forEach(key => {
                    const feature = featureData[key];
                    const slideHTML = `
                    <div class="w-4/5 flex-shrink-0 aspect-[9/16] flex flex-col justify-center items-center text-center p-6 bg-white rounded-3xl shadow-lg">
                        <img src="${feature.imgSrc}" alt="${feature.title}" class="w-2/3 max-w-[150px] object-contain mb-4" onerror="this.onerror=null;this.src='https://placehold.co/300x200?text=Imagem'">
                        <h3 class="font-bold text-xl text-[var(--primary-text)] mt-4">${feature.title}</h3>
                        <p class="text-[var(--primary-text)] mt-2 text-sm px-4">${feature.description}</p>
                    </div>
                `;
                    mobileSliderContainer.innerHTML += slideHTML;
                });

                // Criar dots
                features.forEach((_, index) => {
                    const dot = document.createElement('button');
                    dot.classList.add('w-2.5', 'h-2.5', 'rounded-full', 'transition-colors');
                    dot.addEventListener('click', () => mobileSlider?.goToSlide(index));
                    mobileSliderDotsContainer.appendChild(dot);
                });

                // Função para atualizar dots
                function updateMobileDots(index) {
                    Array.from(mobileSliderDotsContainer.children).forEach((dot, i) => {
                        dot.classList.toggle('bg-[var(--primary-text)]', i === index);
                        dot.classList.toggle('bg-[rgba(0,0,0,0.2)]', i !== index);
                    });
                }

                // Função para calcular a largura do slide
                function calculateSlideWidth() {
                    const slides = Array.from(mobileSliderContainer.children);
                    if (slides.length === 0) return 0;
                    
                    const slide = slides[0];
                    const slideWidth = slide.offsetWidth;
                    const gap = parseInt(window.getComputedStyle(mobileSliderContainer).gap) || 16;
                    
                    return slideWidth + gap;
                }

                // Função para calcular a transformação personalizada para o mobile
                function customMobileTransform(index) {
                    const slides = Array.from(mobileSliderContainer.children);
                    if (slides.length === 0) return 0;
                    
                    const slide = slides[0];
                    const wrapperWidth = mobileSliderWrapper.offsetWidth;
                    const slideWidth = slide.offsetWidth;
                    const gap = parseInt(window.getComputedStyle(mobileSliderContainer).gap) || 16;
                    
                    // Centralizar o primeiro slide
                    const initialOffset = (wrapperWidth - slideWidth) / 2;
                    const totalSlideWidth = slideWidth + gap;
                    
                    return initialOffset - (index * totalSlideWidth);
                }

                // Configurar slider customizado para mobile
                if (features.length > 1) {
                    mobileSlider = new DraggableSlider(mobileSliderContainer, {
                        slideWidth: calculateSlideWidth(),
                        customTransform: customMobileTransform,
                        onSlideChange: updateMobileDots,
                        resistance: 0.3,
                        threshold: 30,
                        onResize: () => {
                            // Recalcular dimensões do mobile slider no resize
                            mobileSlider.config.slideWidth = calculateSlideWidth();
                            
                            // Aguardar um frame para garantir que o DOM foi atualizado
                            requestAnimationFrame(() => {
                                mobileSlider.updateDimensions();
                                mobileSlider.goToSlide(mobileSlider.currentIndex, false);
                            });
                        }
                    });

                    // Inicializar posição após o load
                    window.addEventListener('load', () => {
                        if (mobileSlider) {
                            // Recalcular após todas as imagens carregarem
                            setTimeout(() => {
                                mobileSlider.config.slideWidth = calculateSlideWidth();
                                mobileSlider.updateDimensions();
                                mobileSlider.goToSlide(0, false);
                            }, 100);
                        }
                    });
                }
            }

            // --- LÓGICA DO SLIDER DE PLANOS (MOBILE) COM DRAG ---
            const plansSliderWrapper = document.getElementById('plans-slider-wrapper');
            if (plansSliderWrapper) {
                const plansSliderContainer = document.getElementById('plans-slider');
                const plansSliderDotsContainer = document.getElementById('plans-slider-dots');
                const planSlides = Array.from(plansSliderContainer.children);
                let plansSlider = null;

                // Criar dots para os planos
                planSlides.forEach((_, index) => {
                    const dot = document.createElement('button');
                    dot.classList.add('w-2.5', 'h-2.5', 'rounded-full', 'transition-colors');
                    dot.addEventListener('click', () => plansSlider?.goToSlide(index));
                    plansSliderDotsContainer.appendChild(dot);
                });

                // Função para atualizar dots dos planos
                function updatePlansDots(index) {
                    Array.from(plansSliderDotsContainer.children).forEach((dot, i) => {
                        dot.classList.toggle('bg-[var(--primary-text)]', i === index);
                        dot.classList.toggle('bg-[rgba(255,255,255,0.4)]', i !== index);
                    });
                }

                // Função para calcular a largura do slide dos planos
                function calculatePlanSlideWidth() {
                    const slides = Array.from(plansSliderContainer.children);
                    if (slides.length === 0) return 0;
                    
                    const slide = slides[0];
                    const slideWidth = slide.offsetWidth;
                    const gap = parseInt(window.getComputedStyle(plansSliderContainer).gap) || 16;
                    
                    return slideWidth + gap;
                }

                // Função para calcular a transformação personalizada para os planos mobile
                function customPlansTransform(index) {
                    const slides = Array.from(plansSliderContainer.children);
                    if (slides.length === 0) return 0;
                    
                    const slide = slides[0];
                    const wrapperWidth = plansSliderWrapper.offsetWidth;
                    const slideWidth = slide.offsetWidth;
                    const gap = parseInt(window.getComputedStyle(plansSliderContainer).gap) || 16;
                    
                    // Centralizar o primeiro slide
                    const initialOffset = (wrapperWidth - slideWidth) / 2;
                    const totalSlideWidth = slideWidth + gap;
                    
                    return initialOffset - (index * totalSlideWidth);
                }

                // Configurar slider customizado para planos mobile
                if (planSlides.length > 1) {
                    plansSlider = new DraggableSlider(plansSliderContainer, {
                        slideWidth: calculatePlanSlideWidth(),
                        customTransform: customPlansTransform,
                        onSlideChange: updatePlansDots,
                        resistance: 0.3,
                        threshold: 30,
                        onResize: () => {
                            // Recalcular dimensões do plans slider no resize
                            plansSlider.config.slideWidth = calculatePlanSlideWidth();
                            
                            // Aguardar um frame para garantir que o DOM foi atualizado
                            requestAnimationFrame(() => {
                                plansSlider.updateDimensions();
                                plansSlider.goToSlide(plansSlider.currentIndex, false);
                            });
                        }
                    });

                    // Inicializar posição após o load
                    window.addEventListener('load', () => {
                        if (plansSlider) {
                            // Recalcular após o layout estar pronto
                            setTimeout(() => {
                                plansSlider.config.slideWidth = calculatePlanSlideWidth();
                                plansSlider.updateDimensions();
                                plansSlider.goToSlide(0, false);
                            }, 100);
                        }
                    });
                }
            }
        });
    </script>
