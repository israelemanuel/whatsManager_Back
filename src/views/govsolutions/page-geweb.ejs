            // --- CLASSE UTILITÁRIA PARA SLIDERS ARRASTÁVEIS ---
            class DraggableSlider {
                constructor(container, config = {}) {
                    this.container = container;
                    this.config = {
                        autoPlay: config.autoPlay || false,
                        autoPlayInterval: config.autoPlayInterval || 5000,
                        snapToSlide: config.snapToSlide !== false,
                        resistance: config.resistance || 0.25,
                        threshold: config.threshold || 50,
                        onSlideChange: config.onSlideChange || null,
                        slideWidth: config.slideWidth || null,
                        loop: config.loop || false,
                        customTransform: config.customTransform || null,
                        onResize: config.onResize || null,
                        ...config
                    };
                    
                    this.currentIndex = 0;
                    this.slides = Array.from(this.container.children);
                    this.slideCount = this.slides.length;
                    this.containerWidth = 0;
                    this.slideWidth = 0;
                    this.isDragging = false;
                    this.startX = 0;
                    this.currentX = 0;
                    this.initialTransform = 0;
                    this.animationId = null;
                    this.autoPlayTimer = null;
                    this.resizeTimer = null;
                    
                    this.init();
                }

                init() {
                    if (this.slideCount <= 1) return;
                    
                    this.updateDimensions();
                    this.bindEvents();
                    this.goToSlide(this.currentIndex, false);
                    
                    if (this.config.autoPlay) {
                        this.startAutoPlay();
                    }
                }

                updateDimensions() {
                    this.containerWidth = this.container.parentElement.offsetWidth;
                    if (this.config.customTransform) {
                        // Para sliders customizados, recalcular na própria função
                        this.slideWidth = this.config.slideWidth || this.containerWidth;
                    } else {
                        this.slideWidth = this.config.slideWidth || this.containerWidth;
                    }
                }

                // Função de debounce para resize
                debounce(func, wait) {
                    return (...args) => {
                        clearTimeout(this.resizeTimer);
                        this.resizeTimer = setTimeout(() => func.apply(this, args), wait);
                    };
                }

                bindEvents() {
                    // Mouse events
                    this.container.addEventListener('mousedown', this.handleStart.bind(this));
                    document.addEventListener('mousemove', this.handleMove.bind(this));
                    document.addEventListener('mouseup', this.handleEnd.bind(this));

                    // Touch events
                    this.container.addEventListener('touchstart', this.handleStart.bind(this), { passive: true });
                    this.container.addEventListener('touchmove', this.handleMove.bind(this), { passive: false });
                    this.container.addEventListener('touchend', this.handleEnd.bind(this));

                    // Prevent context menu and text selection
                    this.container.addEventListener('contextmenu', e => e.preventDefault());
                    this.container.addEventListener('selectstart', e => e.preventDefault());

                    // Resize com debounce
                    const debouncedResize = this.debounce(() => {
                        this.handleResize();
                    }, 150);
                    
                    window.addEventListener('resize', debouncedResize);
                    window.addEventListener('orientationchange', debouncedResize);
                }

                handleResize() {
                    // Callback personalizado antes do resize
                    if (this.config.onResize) {
                        this.config.onResize();
                    }
                    
                    // Atualizar dimensões
                    this.updateDimensions();
                    
                    // Reposicionar no slide atual sem animação
                    this.goToSlide(this.currentIndex, false);
                    
                    // Reiniciar autoplay se estava ativo
                    if (this.config.autoPlay && !this.autoPlayTimer) {
                        this.startAutoPlay();
                    }
                }

                handleStart(e) {
                    this.isDragging = true;
                    this.startX = this.getEventX(e);
                    this.initialTransform = this.getCurrentTransform();
                    
                    this.container.style.transition = 'none';
                    this.container.classList.add('dragging');
                    
                    this.stopAutoPlay();
                    
                    if (e.type === 'mousedown') {
                        e.preventDefault();
                    }
                }

                handleMove(e) {
                    if (!this.isDragging) return;

                    this.currentX = this.getEventX(e);
                    const diff = this.currentX - this.startX;
                    
                    let newTransform = this.initialTransform + diff;
                    
                    // Apply resistance at boundaries
                    let maxTransform, minTransform;
                    
                    if (this.config.customTransform) {
                        // Para sliders customizados (como mobile), calcular limites dinamicamente
                        maxTransform = this.config.customTransform(0);
                        minTransform = this.config.customTransform(this.slideCount - 1);
                    } else {
                        // Para sliders padrão
                        maxTransform = 0;
                        minTransform = -((this.slideCount - 1) * this.slideWidth);
                    }
                    
                    if (newTransform > maxTransform) {
                        newTransform = maxTransform + (newTransform - maxTransform) * this.config.resistance;
                    } else if (newTransform < minTransform) {
                        newTransform = minTransform + (newTransform - minTransform) * this.config.resistance;
                    }

                    this.container.style.transform = `translateX(${newTransform}px)`;
                    
                    if (e.type === 'touchmove') {
                        e.preventDefault();
                    }
                }

                handleEnd(e) {
                    if (!this.isDragging) return;

                    this.isDragging = false;
                    this.container.classList.remove('dragging');

                    const diff = this.currentX - this.startX;
                    const threshold = this.config.threshold;

                    if (Math.abs(diff) > threshold) {
                        if (diff > 0 && this.currentIndex > 0) {
                            this.currentIndex--;
                        } else if (diff < 0 && this.currentIndex < this.slideCount - 1) {
                            this.currentIndex++;
                        }
                    }

                    this.goToSlide(this.currentIndex, true);
                    
                    if (this.config.autoPlay) {
                        this.startAutoPlay();
                    }
                }

                getEventX(e) {
                    return e.type.includes('mouse') ? e.clientX : e.changedTouches[0].clientX;
                }

                getCurrentTransform() {
                    const style = window.getComputedStyle(this.container);
                    const matrix = new DOMMatrix(style.transform);
                    return matrix.m41;
                }

                goToSlide(index, animate = true) {
                    this.currentIndex = Math.max(0, Math.min(index, this.slideCount - 1));
                    
                    // Para mobile slider com gap, usar cálculo personalizado
                    let transform;
                    if (this.config.customTransform) {
                        transform = this.config.customTransform(this.currentIndex);
                    } else {
                        transform = -(this.currentIndex * this.slideWidth);
                    }

                    if (animate) {
                        this.container.style.transition = 'transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                    } else {
                        this.container.style.transition = 'none';
                    }

                    this.container.style.transform = `translateX(${transform}px)`;

                    if (this.config.onSlideChange) {
                        this.config.onSlideChange(this.currentIndex);
                    }
                }

                nextSlide() {
                    if (this.currentIndex < this.slideCount - 1) {
                        this.goToSlide(this.currentIndex + 1);
                    } else if (this.config.loop) {
                        this.goToSlide(0);
                    }
                }

                prevSlide() {
                    if (this.currentIndex > 0) {
                        this.goToSlide(this.currentIndex - 1);
                    } else if (this.config.loop) {
                        this.goToSlide(this.slideCount - 1);
                    }
                }

                startAutoPlay() {
                    if (!this.config.autoPlay) return;
                    this.stopAutoPlay();
                    this.autoPlayTimer = setInterval(() => {
                        this.nextSlide();
                    }, this.config.autoPlayInterval);
                }

                stopAutoPlay() {
                    if (this.autoPlayTimer) {
                        clearInterval(this.autoPlayTimer);
                        this.autoPlayTimer = null;
                    }
                }

                destroy() {
                    this.stopAutoPlay();
                    // Remove event listeners would go here
                }
            }

