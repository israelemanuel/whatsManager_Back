    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // --- GSAP ANIMAÇÕES COM SCROLL TRIGGER ---
            // Registrar o plugin ScrollTrigger
            gsap.registerPlugin(ScrollTrigger);

            // Configurações globais para melhor performance
            gsap.config({ 
                force3D: true,
                nullTargetWarn: false 
            });

            // Função para criar animações fade-up
            function createFadeUpAnimation(selector, options = {}) {
                const elements = document.querySelectorAll(selector);
                if (elements.length === 0) return;

                elements.forEach((element, index) => {
                    gsap.fromTo(element, 
                        {
                            opacity: 0,
                            y: 50,
                            scale: 0.95
                        },
                        {
                            opacity: 1,
                            y: 0,
                            scale: 1,
                            duration: options.duration || 0.8,
                            ease: options.ease || "power2.out",
                            delay: options.stagger ? index * 0.2 : 0,
                            scrollTrigger: {
                                trigger: element,
                                start: options.start || "top 85%",
                                end: options.end || "bottom 15%",
                                toggleActions: "play none none reverse",
                                ...options.scrollTrigger
                            }
                        }
                    );
                });
            }

            // Função para criar animações staggered
            function createStaggerAnimation(selector, options = {}) {
                const container = document.querySelector(selector);
                if (!container) return;

                const children = container.children;
                if (children.length === 0) return;

                gsap.fromTo(children,
                    {
                        opacity: 0,
                        y: 50,
                        scale: 0.9
                    },
                    {
                        opacity: 1,
                        y: 0,
                        scale: 1,
                        duration: 0.6,
                        ease: "power2.out",
                        stagger: 0.15,
                        scrollTrigger: {
                            trigger: container,
                            start: "top 80%",
                            end: "bottom 20%",
                            toggleActions: "play none none reverse",
                            ...options.scrollTrigger
                        }
                    }
                );
            }

            // Aplicar animações aos elementos
            // Elementos com fade-up básico
            createFadeUpAnimation('.gsap-fade-up', {
                duration: 0.8,
                start: "top 80%"
            });

            // Elementos com stagger (aparecem em sequência)
            createStaggerAnimation('.gsap-stagger-up', {
                scrollTrigger: {
                    start: "top 75%"
                }
            });

            // Animação especial para o banner principal (fade-in mais lento)
            gsap.fromTo('#banner-carousel', 
                {
                    opacity: 0,
                    scale: 0.98
                },
                {
                    opacity: 1,
                    scale: 1,
                    duration: 1.2,
                    ease: "power2.out",
                    delay: 0.3
                }
            );

            // Animação para cards de vantagens com hover effect
            const advantageCards = document.querySelectorAll('#modulos .grid > div');
            if (advantageCards.length > 0) {
                advantageCards.forEach((card, index) => {
                    // Animação de entrada
                    gsap.fromTo(card,
                        {
                            opacity: 0,
                            y: 60,
                            rotationY: 15
                        },
                        {
                            opacity: 1,
                            y: 0,
                            rotationY: 0,
                            duration: 0.8,
                            ease: "power2.out",
                            delay: index * 0.2,
                            scrollTrigger: {
                                trigger: card,
                                start: "top 85%",
                                toggleActions: "play none none reverse"
                            }
                        }
                    );

                    // Efeito hover aprimorado
                    card.addEventListener('mouseenter', () => {
                        gsap.to(card, {
                            scale: 1.05,
                            y: -10,
                            duration: 0.3,
                            ease: "power2.out"
                        });
                    });

                    card.addEventListener('mouseleave', () => {
                        gsap.to(card, {
                            scale: 1,
                            y: 0,
                            duration: 0.3,
                            ease: "power2.out"
                        });
                    });
                });
            }

            // Animação para logos dos sistemas integrados
            const logoButtons = document.querySelectorAll('#sistemas_integrados button');
            if (logoButtons.length > 0) {
                logoButtons.forEach((button, index) => {
                    gsap.fromTo(button,
                        {
                            opacity: 0,
                            scale: 0.8,
                            y: 30
                        },
                        {
                            opacity: 1,
                            scale: 1,
                            y: 0,
                            duration: 0.6,
                            ease: "back.out(1.2)",
                            delay: index * 0.1,
                            scrollTrigger: {
                                trigger: button,
                                start: "top 90%",
                                toggleActions: "play none none reverse"
                            }
                        }
                    );
                });
            }

            // Animação para FAQs
            const faqItems = document.querySelectorAll('#faq-accordion > div');
            if (faqItems.length > 0) {
                faqItems.forEach((item, index) => {
                    gsap.fromTo(item,
                        {
                            opacity: 0,
                            x: -50
                        },
                        {
                            opacity: 1,
                            x: 0,
                            duration: 0.6,
                            ease: "power2.out",
                            delay: index * 0.1,
                            scrollTrigger: {
                                trigger: item,
                                start: "top 90%",
                                toggleActions: "play none none reverse"
                            }
                        }
                    );
                });
            }

            // Parallax suave para seções de fundo
            gsap.to('#sistemas_integrados', {
                y: -50,
                ease: "none",
                scrollTrigger: {
                    trigger: '#sistemas_integrados',
                    start: "top bottom",
                    end: "bottom top",
                    scrub: 1
                }
            });

            // Animação especial para o botão CTA principal
            const ctaButton = document.querySelector('.gsap-cta-button');
            if (ctaButton) {
                gsap.fromTo(ctaButton,
                    {
                        opacity: 0,
                        scale: 0.8,
                        y: 30
                    },
                    {
                        opacity: 1,
                        scale: 1,
                        y: 0,
                        duration: 0.8,
                        ease: "back.out(1.2)",
                        scrollTrigger: {
                            trigger: ctaButton,
                            start: "top 90%",
                            toggleActions: "play none none reverse"
                        }
                    }
                );

                // Efeito hover melhorado para o CTA
                ctaButton.addEventListener('mouseenter', () => {
                    gsap.to(ctaButton, {
                        scale: 1.05,
                        y: -3,
                        duration: 0.3,
                        ease: "power2.out"
                    });
