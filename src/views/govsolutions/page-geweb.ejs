                        <img src="${feature.imgSrc}" alt="${feature.title}" class="w-2/3 max-w-[150px] object-contain mb-4" onerror="this.onerror=null;this.src='https://placehold.co/300x200?text=Imagem'">
                        <h3 class="font-bold text-xl text-[var(--primary-text)] mt-4">${feature.title}</h3>
                        <p class="text-[var(--primary-text)] mt-2 text-sm px-4">${feature.description}</p>
                    </div>
                `;
                    mobileSliderContainer.innerHTML += slideHTML;
                });

                // Criar dots
                features.forEach((_, index) => {
                    const dot = document.createElement('button');
                    dot.classList.add('w-2.5', 'h-2.5', 'rounded-full', 'transition-colors');
                    dot.addEventListener('click', () => mobileSlider?.goToSlide(index));
                    mobileSliderDotsContainer.appendChild(dot);
                });

                // Função para atualizar dots
                function updateMobileDots(index) {
                    Array.from(mobileSliderDotsContainer.children).forEach((dot, i) => {
                        dot.classList.toggle('bg-brand-primary', i === index);
                        dot.classList.toggle('bg-[rgba(0,0,0,0.2)]', i !== index);
                    });
                }

                // Função para calcular a largura do slide
                function calculateSlideWidth() {
                    const slides = Array.from(mobileSliderContainer.children);
                    if (slides.length === 0) return 0;
                    
                    const slide = slides[0];
                    const slideWidth = slide.offsetWidth;
                    const gap = parseInt(window.getComputedStyle(mobileSliderContainer).gap) || 16;
                    
                    return slideWidth + gap;
                }

                // Função para calcular a transformação personalizada para o mobile
                function customMobileTransform(index) {
                    const slides = Array.from(mobileSliderContainer.children);
                    if (slides.length === 0) return 0;
                    
                    const slide = slides[0];
                    const wrapperWidth = mobileSliderWrapper.offsetWidth;
                    const slideWidth = slide.offsetWidth;
                    const gap = parseInt(window.getComputedStyle(mobileSliderContainer).gap) || 16;
                    
                    // Centralizar o primeiro slide
                    const initialOffset = (wrapperWidth - slideWidth) / 2;
                    const totalSlideWidth = slideWidth + gap;
                    
                    return initialOffset - (index * totalSlideWidth);
                }

                // Configurar slider customizado para mobile
                if (features.length > 1) {
                    mobileSlider = new DraggableSlider(mobileSliderContainer, {
                        slideWidth: calculateSlideWidth(),
                        customTransform: customMobileTransform,
                        onSlideChange: updateMobileDots,
                        resistance: 0.3,
                        threshold: 30,
                        onResize: () => {
                            // Recalcular dimensões do mobile slider no resize
                            mobileSlider.config.slideWidth = calculateSlideWidth();
                            
                            // Aguardar um frame para garantir que o DOM foi atualizado
                            requestAnimationFrame(() => {
                                mobileSlider.updateDimensions();
                                mobileSlider.goToSlide(mobileSlider.currentIndex, false);
                            });
                        }
                    });

                    // Inicializar posição após o load
                    window.addEventListener('load', () => {
                        if (mobileSlider) {
                            // Recalcular após todas as imagens carregarem
                            setTimeout(() => {
                                mobileSlider.config.slideWidth = calculateSlideWidth();
                                mobileSlider.updateDimensions();
                                mobileSlider.goToSlide(0, false);
                            }, 100);
                        }
                    });
                }
            }
        });
    </script>
