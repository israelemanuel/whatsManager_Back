    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // --- MENU MÓVEL ---
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
            const navLinks = document.querySelectorAll('.nav-link-mobile');
            
            function toggleMenu() {
                mobileMenu.classList.toggle('-translate-x-full');
                mobileMenuOverlay.classList.toggle('hidden');
                document.body.classList.toggle('overflow-hidden');
            }
            
            mobileMenuButton.addEventListener('click', toggleMenu);
            mobileMenuOverlay.addEventListener('click', toggleMenu);
            navLinks.forEach(link => { 
                link.addEventListener('click', () => { 
                    if (!mobileMenu.classList.contains('-translate-x-full')) { 
                        toggleMenu(); 
                    } 
                }); 
            });

            // --- BOTÃO VOLTAR AO TOPO ---
            (function() {
                const fab = document.getElementById('fab_top');
                if (!fab) return;

                // Prefer reduced motion
                const reduceMotion = window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches;

                // Ensure transitions exist (in case CSS classes not present)
                if (!reduceMotion) {
                    fab.style.transition = 'opacity 200ms ease, transform 180ms ease';
                } else {
                    fab.style.transition = 'none';
                }

                // Helpers
                function getScrollFraction() {
                    const doc = document.documentElement;
                    const scrollTop = window.pageYOffset || doc.scrollTop || document.body.scrollTop || 0;
                    const scrollHeight = Math.max(doc.scrollHeight, document.body.scrollHeight || 0);
                    const clientHeight = doc.clientHeight || window.innerHeight;
                    const maxScroll = Math.max(0, scrollHeight - clientHeight);
                    if (maxScroll === 0) return 0;
                    return scrollTop / maxScroll;
                }

                // Hysteresis thresholds
                const SHOW_THRESHOLD = 0.2; // show when >= 20%
                const HIDE_THRESHOLD = 0.18; // hide when < 18%

                let ticking = false;
                let isVisible = false;
                function setFabVisible(visible) {
                    if (visible === isVisible) return;
                    isVisible = visible;
                    if (visible) {
                        fab.classList.remove('opacity-0');
                        fab.classList.add('visible');
                        fab.style.pointerEvents = 'auto';
                        if (!reduceMotion) fab.style.transform = 'scale(1)';
                        fab.setAttribute('aria-hidden', 'false');
                    } else {
                        fab.classList.add('opacity-0');
                        fab.classList.remove('visible');
                        fab.style.pointerEvents = 'none';
                        if (!reduceMotion) fab.style.transform = 'scale(0.95)';
                        fab.setAttribute('aria-hidden', 'true');
                    }
                }

                function onScroll() {
                    if (ticking) return;
                    ticking = true;
                    requestAnimationFrame(() => {
                        const frac = getScrollFraction();
                        if (!isVisible && frac >= SHOW_THRESHOLD) {
                            setFabVisible(true);
                        } else if (isVisible && frac < HIDE_THRESHOLD) {
                            setFabVisible(false);
                        }
                        ticking = false;
                    });
                }

                // Inicial check (com pequeno atraso para permitir layout com outros elementos)
                setTimeout(onScroll, 120);
                window.addEventListener('scroll', onScroll, { passive: true });

                // Clique suave para o topo
                fab.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector('#inicio') || document.documentElement;
                    if (!target) {
                        window.scrollTo({ top: 0, behavior: 'smooth' });
                        return;
                    }
                    const top = window.scrollY + (target.getBoundingClientRect ? target.getBoundingClientRect().top : 0);
                    window.scrollTo({ top: top, behavior: 'smooth' });
                });
            })();

            // --- HEADER SCROLL BEHAVIOR ---
            const header = document.getElementById('header');

            if (!header) {
                console.error('Header element not found!');
                return;
            }

            // Função utilitária para aplicar dois modos de header
            function applyHeaderMode(mode) {
                header.style.position = 'sticky';
                header.style.zIndex = '50';
                header.style.backdropFilter = 'blur(12px)';
                header.style.boxShadow = '0 1px 6px rgba(0,0,0,0.08)';
                header.style.transform = '';
                header.style.margin = '0';
                header.style.justifySelf = 'center';
                header.style.transition = 'all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)';

                // Escolhe largura responsiva para o modo 'pill':
                const isDesktopWidth = (typeof window !== 'undefined') ? window.matchMedia('(min-width: 641px)').matches : true;

                if (mode === 'pill') {
                    // centraliza e limita largura responsiva
                    header.style.width = isDesktopWidth ? '80dvw' : '90dvw';
                    header.style.borderRadius = '9999px';
                    header.style.boxShadow = '0 6px 30px rgba(0,0,0,0.12)';
                    header.style.backgroundColor = 'rgba(255,255,255,0.6)';
                    header.style.top = '8px';
                } else {
                    // modo full (padrão)
                    header.style.width = '100dvw';
                    header.style.borderRadius = '0';
                    header.style.boxShadow = '0 1px 6px rgba(0,0,0,0.08)';
                    header.style.backgroundColor = 'rgba(255,255,255,0.6)';
                    header.style.top = '0px';
                    header.style.backgroundColor = 'rgba(255,255,255,1)';
                }
            }

            // Reavaliar larguras no resize
            (function setupHeaderResizeListener() {
                let resizeTimer = null;
                function onResize() {
                    clearTimeout(resizeTimer);
                    resizeTimer = setTimeout(() => {
                        const currentMode = header.classList.contains('pill') ? 'pill' : 'full';
                        applyHeaderMode(currentMode);
                    }, 120);
                }

                window.addEventListener('resize', onResize);
                window.addEventListener('orientationchange', onResize);
            })();

            const pillDistance = 56;

            function checkHeaderPill() {
                if (window.scrollY >= pillDistance) {
                    header.classList.add('pill');
                    applyHeaderMode('pill');
                } else {
                    header.classList.remove('pill');
                    applyHeaderMode('full');
                }
            }

            // Inicializar estado e escutar scroll
            checkHeaderPill();
            window.addEventListener('scroll', () => {
                if (window.__headerScrollRaf) return;
                window.__headerScrollRaf = requestAnimationFrame(() => {
                    checkHeaderPill();
                    window.__headerScrollRaf = null;
                });
            }, { passive: true });
        });
    </script>
